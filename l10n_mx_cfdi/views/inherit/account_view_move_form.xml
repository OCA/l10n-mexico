<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">Account Move: CFDI generation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='action_invoice_sent'][1]"
                position="attributes"
            >
                <attribute name="string">Enviar</attribute>
            </xpath>
            <xpath
                expr="//button[@name='action_invoice_sent'][2]"
                position="attributes"
            >
                <attribute name="string">Enviar</attribute>
            </xpath>
            <field name="payment_reference" position="after">
                <field name="l10n_mx_cfdi_enabled" invisible="1" />
                <field name="l10n_mx_cfdi_auto" invisible="1" />
                <label
                    for="cfdi_document_id"
                    string="CFDI"
                    attrs="{'invisible': [('l10n_mx_cfdi_enabled', '=', False)]}"
                />
                <div attrs="{'invisible': [('l10n_mx_cfdi_enabled', '=', False)]}">
                    <div attrs="{'invisible': [('cfdi_document_state', '=', False)]}">
                        <field name="cfdi_document_id" no_label="1" class="mr-3" />
                        <field
                            name="cfdi_document_state"
                            widget="badge"
                            decoration-success="cfdi_document_state == 'published'"
                            decoration-danger="cfdi_document_state == 'canceled'"
                        />
                    </div>

                    <field
                        name="cfdi_required"
                        attrs="{
                        'readonly': [('state', '!=', 'draft')],
                        'invisible': [
                            '|',
                            ('move_type', 'not in', ('out_invoice', 'out_refund')),
                            ('l10n_mx_cfdi_auto', '=', False)
                         ]}"
                    />
                    <label
                        for="cfdi_required"
                        string="Requerido"
                        attrs="{
                        'readonly': [('state', '!=', 'draft')],
                        'invisible': [
                            '|',
                            ('move_type', 'not in', ('out_invoice', 'out_refund')),
                            ('l10n_mx_cfdi_auto', '=', False)
                         ]}"
                    />
                    <field name="cfdi_data_in_attachments" invisible="1" />
                    <button
                        name="action_load_from_attachment"
                        type="object"
                        string="Cargar desde adjuntos"
                        class="btn btn-info btn-sm"
                        groups="account.group_account_invoice"
                        attrs="{
                            'invisible': ['|',
                                ('cfdi_data_in_attachments', '=', False),
                                ('cfdi_document_id', '!=', False)]
                            }"
                    />
                    <button
                        name="action_generate_cfdi"
                        type="object"
                        string="Generar CFDI"
                        class="btn btn-info btn-sm"
                        groups="account.group_account_invoice"
                        attrs="{
                            'invisible': ['|', '|',
                                ('state', '!=', 'posted'),
                                ('l10n_mx_cfdi_auto', '=', True),
                                ('cfdi_document_id', '!=', False)]
                            }"
                    />
                </div>
            </field>
            <page id="invoice_tab" position="after">
                <field name="l10n_mx_cfdi_enabled" invisible="1" />
                <page
                    id="cfdi_tab"
                    string="CFDI"
                    attrs="{'invisible': [('l10n_mx_cfdi_enabled', '=', False)]}"
                >
                    <group>
                        <field
                            name="issuer_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="receiver_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="cfdi_use_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="payment_method_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="payment_form_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                    </group>
                    <group>
                        <field
                            name="related_cert_ids"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        >
                            <tree create="false">
                                <field name="name" string="Folio" />
                                <field name="type" />
                                <field name="uuid" />
                                <field name="state" widget="badge" />
                                <field
                                    name="pdf_file"
                                    widget="file"
                                    filename="pdf_filename"
                                />
                                <field name="pdf_filename" invisible='1' />
                                <field
                                    name="xml_file"
                                    widget="file"
                                    filename="xml_filename"
                                />
                                <field name="xml_filename" invisible='1' />
                            </tree>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
