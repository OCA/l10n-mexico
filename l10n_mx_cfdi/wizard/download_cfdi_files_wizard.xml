<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="download_cfdi_files_wizard_form" model="ir.ui.view">
            <field name="name">Descargar CFDIs</field>
            <field name="model">l10n_mx_cfdi.download_cfdi_files_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <h4>CFDIs Encontrados</h4>
                    <field name="cfdi_document_ids" readonly="True">
                        <tree>
                            <field name="name" string="Factura" />
                            <field
                                name="pdf_file"
                                widget="file"
                                filename="pdf_filename"
                            />
                            <field name="pdf_filename" invisible='1' />
                            <field
                                name="xml_file"
                                widget="file"
                                filename="xml_filename"
                            />
                            <field name="xml_filename" invisible='1' />
                        </tree>
                        <field name="zip_file" />
                    </field>

                    <footer>
                        <button
                            type="object"
                            name="action_download_zip"
                            string="Descargar"
                            class="btn-primary"
                        />
                        <button
                            special="cancel"
                            string="Cancelar"
                            class="btn-secondary"
                        />
                    </footer>
                </form>
            </field>
        </record>

        <record id="download_cfdi_files_wizard" model="ir.actions.act_window">
            <field name="name">Descargar CFDIs</field>
            <field name="res_model">l10n_mx_cfdi.download_cfdi_files_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_account_move" />
            <field name="binding_view_types">list</field>
        </record>
    </data>
</odoo>
