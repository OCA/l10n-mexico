<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_res_neighborhood_tree" model="ir.ui.view">
            <field name="name">view.res.neighborhood.tree</field>
            <field name="model">res.neighborhood</field>
            <field name="arch" type="xml">
                <tree string="Neighborhood">
                    <field name="name"/>
                    <field name="zip_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="view_res_neighborhood_form" model="ir.ui.view">
            <field name="name">view.res.neighborhood.form</field>
            <field name="model">res.neighborhood</field>
            <field name="arch" type="xml">
                <form string="Neighborhood">
                   <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="zip_id" options='{"no_open": True}'/>
                            <field name="country_id" options='{"no_open": True}'/>
                        </group>
                        <group>
                            <field name="location_id"/>
                            <field name="county_id"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="view_res_neighborhood_search" model="ir.ui.view">
            <field name="name">view.res.neighborhood.search</field>
            <field name="model">res.neighborhood</field>
            <field name="arch" type="xml">
                <search string="Zip">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="zip_id" options='{"no_open": True}'/>
                    <field name="country_id" options='{"no_open": True}'/>
                    <field name="location_id"/>
                    <field name="county_id"/>
                </search>
            </field>
        </record>

        <record id="action_res_neighborhood" model="ir.actions.act_window">
            <field name="name">Neighborhood</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.neighborhood</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_res_neighborhood_tree"/>
        </record>

          <menuitem 
               action="action_res_neighborhood"
               id="menu_res_neighborhood"
               parent="base.menu_localisation"
               sequence="1"
               groups="base.group_no_one"/>
    </data>
</openerp>
